{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "services/*": [ "src/app/services/*" ],
            "models/*": [ "src/app/models/*" ],
            "enums/*": [ "src/app/enums/*" ],
            "util/*": [ "src/app/util/*" ],
            "config/*": [ "src/app/config/*" ]
        },
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/__tests__/*.ts"
    ]
}
